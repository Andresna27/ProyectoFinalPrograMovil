<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_over"
    android:textAlignment="center">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B9373434"
        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="52dp">


        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:text="Cartaguito"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="245dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="257dp"
                app:srcCompat="@drawable/parqueo" />
        </FrameLayout>

        <TextView
            android:id="@+id/textasdfg"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="50px"
            android:text="Contacto"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textfasdfc"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:layout_marginTop="50px"
            android:text="800-900-000 Cartaguito@parking.go.cr Oficinas centrales parqueo Cartaguito de Costa Rica, Sucursal Cartago De la Iglesia de Cartago 200 mts al Sur. Cartago, Central. "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <Button
            android:id="@+id/btn_volverContacto"
            android:layout_width="223dp"
            android:layout_height="51dp"
            android:layout_marginLeft="250px"
            android:backgroundTint="#03A9F4"
            android:text="Volver"
            android:textAlignment="center"
            app:icon="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textfadasd"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="50px"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />


    </LinearLayout>

</ScrollView>

