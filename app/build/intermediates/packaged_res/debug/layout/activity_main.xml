<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTintMode="src_over">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B9373434"
        android:orientation="vertical"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="52dp">

        <TextView
            android:id="@+id/textView40"
            android:layout_width="match_parent"
            android:layout_height="7dp" />

        <FrameLayout
            android:layout_width="416dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Parking Cartaguito"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="44sp"
                android:textStyle="bold" />

        </FrameLayout>

        <TextView
            android:id="@+id/textView52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="match_parent"
            android:layout_height="9dp" />

        <Button
            android:id="@+id/btn_iniciarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:text="Iniciar Sesión"
            app:icon="@drawable/ic_login" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp" />

        <Button
            android:id="@+id/btn_registrarse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#03A9F4"
            android:text="Registrarse"
            app:icon="@drawable/ic_register" />

        <TextView
            android:id="@+id/textView53"
            android:layout_width="match_parent"
            android:layout_height="54dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="215dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="232dp"
                app:srcCompat="@drawable/parqueo" />
        </FrameLayout>

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/textView25"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="50px"
            android:background="#03A9F4"
            android:text="Bienvenido!"
            android:textAlignment="center"
            android:textColor="#FBFBFB"
            android:textSize="60sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView41"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView42"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_informacion"
                android:layout_width="223dp"
                android:layout_height="wrap_content"
                android:layout_marginRight='10px'
                android:backgroundTint="#03A9F4"
                android:text="Mas información"
                app:icon="@drawable/ic_info" />

            <Button
                android:id="@+id/btn_contacto"
                android:layout_width="159dp"
                android:layout_height="match_parent"
                android:backgroundTint="#03A9F4"
                android:text="Contacto"
                app:icon="@drawable/ic_phone" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView50"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/btn_contactoasdf"
            android:layout_width="match_parent"
            android:layout_height="15dp" />

    </LinearLayout>

</ScrollView>






